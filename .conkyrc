# sadasant
#~ .conkyrc

# run
  total_run_times  0
  update_interval  0.5
  double_buffer   yes
  # no_buffers  yes

# font
  use_xft  yes
  xftfont  Fixed:size=9
  xftalpha  1
  uppercase  yes
  text_buffer_size  2048

# window
  background  yes
  own_window  yes
  own_window_transparent no
  own_window_type  desktop
  # own_window_hints  undecorated,below,sticky,skip_taskbar,skip_pager

# position
  minimum_size  1024 1
  alignment  top_left
  gap_x 5
  gap_y 1

# border
  draw_shades   no
  draw_outline  no
  draw_borders  no
  draw_graph_borders  no
  stippled_borders  0
  border_width  0

# colors
  default_color 333333
  default_shade_color 333333
  default_outline_color  000000

# setup
  cpu_avg_samples 2
  net_avg_samples 2
  override_utf8_locale yes
  use_spacer none

TEXT
${font :bold:size=8}${color #dddddd}sadasant${color}${font} ${color #333333} {${user_number}}  HOME:${fs_bar 9,30 /home}   BAT:${battery_bar 9,30 BAT1}   SWP:${swapbar 9,30}   DISK: ${diskiograph 9,30}   RAM:${memgraph 9,30}   CPU:${cpugraph 9,30}   SIG:${wireless_link_bar 9,30 wlan0}   ${if_up wlan0}wUP:${upspeedgraph wlan0 9,30}   wDW:${downspeedgraph wlan0 9,30}${endif}${if_up eth0}   lUP:${upspeedgraph eth0 9,30}   lDW:${downspeedgraph eth0 9,30}${color #333333} ${color}${alignr}${color #dddddd}${font :bold:size=8}${time %d/%m/%g %H:%M}   ${font}${color}
