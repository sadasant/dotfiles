# .conkyrc
# by Daniel Rodríguez <http://sadasant.com/>
# 2014-04-01

total_run_times 0
update_interval 1
double_buffer   yes

use_xft              yes
override_utf8_locale no
xftfont              Terminus:size=12
xftalpha             1
uppercase            yes
text_buffer_size     2048

background             yes
own_window             yes
own_window_transparent no
own_window_type        override

minimum_size  1333 400
maximum_width 1333
alignment     top_left
gap_x         16
gap_y         16

draw_shades        no
draw_outline       no
draw_borders       no
draw_graph_borders no
stippled_borders   0
border_width       0

default_color         464646
default_shade_color   464646
default_outline_color 000000
default_bar_size      27 11

cpu_avg_samples      2
net_avg_samples      2
override_utf8_locale yes
use_spacer           none

TEXT
${color #ffffff}${font LiberationMono-11}
  █ █
 █████
███████
███████
█  █  █
███████
  ███
  █ █

  █ █
${font}
sadasant
${time %d/%m/%g}
${time %H:%M}${color}
${voffset -240}
${alignr}BAT ${battery_bar 11,27 BAT1}
${alignr}RAM ${memgraph 11,27}
${alignr}CPU ${cpugraph 11,27}${if_up wlo1}

${alignr}HOM ${fs_bar 11,27 /home}
${alignr}SWP ${swapbar 11,27}
${alignr}DSK ${diskiograph 11,27}

${alignr}VPN ${execi 3 if [ "$(pidof openvpn)" ]; then echo "Yup"; else echo "Nop"; fi}
${alignr}SIG ${wireless_link_bar 11,27 wlo1}
${alignr}wUP ${upspeedgraph wlo1 11,27}
${alignr}wDW ${downspeedgraph wlo1 11,27}
${alignr}lUP ${upspeedgraph eno1 11,27}
${alignr}lDW ${downspeedgraph eno1 11,27}

${voffset 375}
${execi 3 if [ ! "$(pidof mocp)" ]; then echo -e "\n\n\n"; fi}
${color #ffffff}MOCP${font}${color}
${execi 3 if [ "$(pidof mocp)" ]; then mocp -Q "%song\nby %artist\nfrom %album\n%ct of %tt"; else echo "Not running."; fi}
# ${execbar echo $((`mocp -Q %cs'*100/'%ts`))}
