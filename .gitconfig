[user]
	name = Daniel Rodrí­guez
	email = sadasant@gmail.com
[github]
	user = sadasant
[bitbucket]
	user = sadasant
[credential]
	helper = cache --timeout=3600
[push]
	default = simple
[core]
	editor = vim
[merge]
	tool = vimdiff
[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto
[alias]
	a = add
	c = commit -am
	cam = commit --amend
	co = checkout
	cob = checkout -b
	d = diff
	l = log
	ls = log --stat
	p = push
	s = status
	graph = log --graph --color --all --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n"
    merge-to = "!f(){ branch=`git branch | grep '* ' | tr -d '* '`; git checkout $1 -q && git merge $branch && git checkout $branch -q; };f"
