// Place your key bindings in this file to override the defaultsauto[]
[
    {
      "key": "alt+tab",
      "command": "editor.toggleFold",
      "when": "editorTextFocus && foldingEnabled"
    },
    {
      "key": "alt+l",
      "command": "dakara-foldplus.cursor.exclude"
    },
    {
      "key": "alt+m",
      "command": "editor.action.goToImplementation",
      "when": "editorHasImplementationProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
      "key": "alt+d",
      "command": "editor.action.revealDefinition",
      "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
      "key": "cmd+s",
      "command": "workbench.action.files.saveFiles"
    },
    {
      "key": "alt+/",
      "command": "workbench.files.action.focusFilesExplorer"
    },
    {
      "key": "alt+c",
      "command": "-gitlens.showQuickCommitFileDetails",
      "when": "editorTextFocus && !gitlens:disabled && config.gitlens.keymap == 'alternate'"
    },
    {
      "key": "alt+t",
      "command": "terminal.focus"
    },
    {
      "key": "alt+g",
      "command": "workbench.action.focusActiveEditorGroup"
    },
    {
      "key": "alt+/",
      "command": "-gitlens.gitCommands",
      "when": "!gitlens:disabled && config.gitlens.keymap == 'alternate'"
    },
    {
      "key": "cmd+k cmd+n",
      "command": "-git.unstageSelectedRanges",
      "when": "isInDiffEditor"
    },
    {
      "key": "ctrl+-",
      "command": "-workbench.action.navigateBack",
      "when": "canNavigateBack"
    },
    {
      "key": "ctrl+shift+-",
      "command": "-workbench.action.navigateForward",
      "when": "canNavigateForward"
    },
    {
      "key": "alt+-",
      "command": "workbench.action.navigatePreviousInEditLocations"
    },
    {
      "key": "alt+=",
      "command": "workbench.action.navigateForwardInEditLocations"
    },
    {
      "key": "alt+p",
      "command": "editor.action.marker.next",
      "when": "editorFocus"
    },
    {
      "key": "alt+f",
      "command": "editor.unfoldAll",
      "when": "editorTextFocus && foldingEnabled"
    },
  // Save all files, format the document and close all folds except the one where the cursor is
  {
    "key": "alt+s",
    "command": "extension.multiCommand.execute",
    "args": {
      "sequence": [
        "workbench.action.files.saveAll",
        "editor.action.formatDocument",
        "dakara-foldplus.cursor.exclude"
      ]
    }
  },
  // Focus on the Explorer on the activity bar
  {
    "key": "cmd+1",
    "command": "workbench.view.explorer"
  },
  // Focus on the search on the activity bar
  {
    "key": "cmd+2",
    "command": "workbench.view.search"
  },
  // Focus on the debug on the activity bar
  {
    "key": "cmd+3",
    "command": "workbench.view.debug"
  },
  // Focus on the extensions on the activity bar
  {
    "key": "cmd+4",
    "command": "workbench.view.extensions"
  },
  // Focus on the source control on the activity bar
  {
    "key": "cmd+5",
    "command": "workbench.view.scm"
  },
]
