# Increase volume
"if [ "$(pgrep pulseaudio)" ]; then pulseaudio-ctl up; else amixer set Master playback 1+; fi"
   XF86AudioRaiseVolume

# Decrease volume
"if [ "$(pgrep pulseaudio)" ]; then pulseaudio-ctl down; else amixer set Master playback 1-; fi"
   XF86AudioLowerVolume

# Toggle sound
"if [ "$(pgrep pulseaudio)" ]; then pulseaudio-ctl mute; else amixer set Master toggle; fi"
   XF86AudioMute

# Play, pause
"if [ "$(pidof mocp)" ]; then mocp --toggle-pause; fi;"
   XF86AudioPlay

# Prev
"if [ "$(pidof mocp)" ]; then mocp --prev; fi;"
   XF86AudioPrev

# Next
"if [ "$(pidof mocp)" ]; then mocp --next; fi;"
   XF86AudioNext

# Go to the beginning of the song
"if [ "$(pidof mocp)" ]; then mocp --jump 0s; fi;"
   Alt + XF86AudioPrev

# Toggle Shuffle
"if [ "$(pidof mocp)" ]; then mocp --toggle shuffle; fi;"
   Alt + XF86AudioNext

# Inc backlight
"xbacklight -inc 5"
   XF86MonBrightnessUp

# Dec backlight
"xbacklight -dec 5"
   XF86MonBrightnessDown
