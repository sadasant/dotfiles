# Increase volume
"if hash pulseaudio-ctl; then pulseaudio-ctl up; else amixer set Master playback 1+; fi"
   XF86AudioRaiseVolume

# Decrease volume
"if hash pulseaudio-ctl; then pulseaudio-ctl down; else amixer set Master playback 1-; fi"
   XF86AudioLowerVolume

# Toggle sound
"if hash pulseaudio-ctl; then pulseaudio-ctl mute; else amixer set Master toggle; fi"
   XF86AudioMute

# Play, stop
"if [ "$(pidof mocp)" ]; then mocp --toggle-pause; fi;"
   XF86AudioPlay

# Next
"if [ "$(pidof mocp)" ]; then mocp --next; fi;"
   XF86AudioNext

# Prev
"if [ "$(pidof mocp)" ]; then mocp --prev; fi;"
   XF86AudioPrev

# Inc backlight
"xbacklight -inc 5"
   XF86MonBrightnessUp

# Dec backlight
"xbacklight -dec 5"
   XF86MonBrightnessDown
