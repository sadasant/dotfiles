#!/bin/bash

interface=$(ifconfig | grep "RUNNING" | cut -d':' -f1)
interface=$(echo ${interface//lo/} | cut -d ' ' -f1)

TXB=$(</sys/class/net/$interface/statistics/tx_bytes)
sleep 2
TXBN=$(</sys/class/net/$interface/statistics/tx_bytes)
TXDIF=$(echo $((TXBN - TXB)))

echo -e "$((TXDIF / 1024 / 2))"
